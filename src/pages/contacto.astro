  <style>
    *,
    *::before,
    *::after {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      display: grid;
      place-content: center;
      min-height: 100vh;
      overflow: hidden;
      user-select: none;
      background: #d6d4d4;
    }
    .white-bkg {
      position: absolute;
      background: #ffffff;
      inset: 0;
      z-index: -10;
    }
    .shadow {
      height: 100vh;
    }
    main {
      background-size: contain;
      width: 60vh;
      height: 100vh;
      display: flex;
      position: relative;
    }
    section {
      width: 100%;
      border-radius: 22px;
      display: flex;
      gap: 24px;
      flex-direction: column;
      overflow: hidden;
      position: relative;
      padding: 16px 6px;
      margin: 10px 10px;
      background: #fff;
      box-shadow: 0 0 10px rgba(0,0,0,.1);
    }
    .card {
      width: 100%;
      max-width: 570px; /* Más pequeña */
      min-height: 220px; /* Más corta */
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      background: #727171;
      border-radius: 24px;
      padding: 0px 18px 18px 18px; /* Menos padding */
      box-shadow: 0 4px 24px rgba(0,0,0,0.10);
      color: #222;
      position: relative;
      gap: 12px; /* Menos espacio entre elementos */
      border: 1.5px solid #e0e0e0;
    }
    .me {
      width: 96px;
      height: 96px;
      background-color: #eaeaea;
      margin-top: 6px;
      margin-bottom: 10px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 2px 12px rgba(0,0,0,0.10);
      background-image: url("../../public/photos/usuario.webp");
      background-size: cover;
      background-position: center;
      border: 3px solid #fff;
    }
    .nombre {
      font-size: 1.7rem;
      font-weight: 700;
      margin-bottom: 0;
      letter-spacing: 0.5px;
      text-align: center;
      color: #222;
    }
    .rol {
      font-size: 1.08rem;
      color: #d6cfcf;
      margin-bottom: 8px;
      font-weight: 400;
      text-align: center;
    }
    .divider {
      width: 60%;
      height: 2px;
      background: #ececec;
      border-radius: 2px;
      margin: 10px 0 8px 0;
      opacity: 0.7;
    }
    .info-group {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 6px;
    }
    .info-label {
      font-weight: 600;
      color: #3b3b3b;
      font-size: 1.08rem;
      margin-bottom: 2px;
      letter-spacing: 0.2px;
    }
    .info-value {
      color: #222;
      font-size: 1.13rem;
      word-break: break-all;
      background: #f7f7f7;
      padding: 3px 10px 3px 10px;
      border-radius: 8px;
      font-weight: 400;
    }
    .buton {
      background-color: #444;
      padding: 12px 28px;
      border-radius: 12px;
      color: #fff;
      border: none;
      transition: background 0.2s, transform 0.2s, box-shadow 0.2s;
      cursor: pointer;
      font-size: 1.08rem;
      margin-top: 18px;
      text-decoration: none;
      font-weight: bold;
      box-shadow: 0 2px 8px rgba(0,0,0,0.10);
      display: flex;
      align-items: center;
      gap: 8px;
    }
    .buton:hover {
      background-color: #222;
      transform: translateY(-3px) scale(1.07);
      box-shadow: 0 4px 16px rgba(0,0,0,0.18);
    }
    @media (max-width: 700px) {
      .card {
        max-width: 98vw;
        padding: 18px 2vw 18px 2vw;
      }
      main {
        width: 100vw;
        min-width: unset;
      }
    }

.loader {
  width: fit-content;
  height: fit-content;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute; /* Cambiado para centrar */
  top: 50%; /* Centrado vertical */
  left: 50%; /* Centrado horizontal */
  transform: translate(-50%, -50%); /* Ajuste para centrar */
}

.truckWrapper {
  width: 200px;
  height: 100px;
  display: flex;
  flex-direction: column;
  position: relative;
  align-items: center;
  justify-content: flex-end;
  overflow-x: hidden;
}
/* truck upper body */
.truckBody {
  width: 130px;
  height: fit-content;
  margin-bottom: 6px;
  animation: motion 1s linear infinite;
}
/* truck suspension animation*/
@keyframes motion {
  0% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(3px);
  }
  100% {
    transform: translateY(0px);
  }
}
/* truck's tires */
.truckTires {
  width: 130px;
  height: fit-content;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0px 10px 0px 15px;
  position: absolute;
  bottom: 0;
}
.truckTires svg {
  width: 24px;
}

.road {
  width: 100%;
  height: 1.5px;
  background-color: #282828;
  position: relative;
  bottom: 0;
  align-self: flex-end;
  border-radius: 3px;
}
.road::before {
  content: "";
  position: absolute;
  width: 20px;
  height: 100%;
  background-color: #282828;
  right: -50%;
  border-radius: 3px;
  animation: roadAnimation 1.4s linear infinite;
  border-left: 10px solid white;
}
.road::after {
  content: "";
  position: absolute;
  width: 10px;
  height: 100%;
  background-color: #282828;
  right: -65%;
  border-radius: 3px;
  animation: roadAnimation 1.4s linear infinite;
  border-left: 4px solid white;
}

.lampPost {
  position: absolute;
  bottom: 0;
  right: -90%;
  height: 90px;
  animation: roadAnimation 1.4s linear infinite;
}

@keyframes roadAnimation {
  0% {
    transform: translateX(0px);
  }
  100% {
    transform: translateX(-350px);
  }
}







