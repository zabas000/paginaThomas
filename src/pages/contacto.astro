---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="shadow">
    <main>
      <section>
        <div class="white-bkg"></div>
        <div class="card">
          <div class="me"></div>
          <h2 class="nombre">Tomas</h2>
          <p class="rol">Atención personalizada</p>
          <div class="divider"></div>
          <div class="info-group">
            <span class="info-label">Teléfono</span>
            <span class="info-value">+57 305 250 0170</span>
          </div>
          <a class="buton" href="" target="_blank" rel="noopener">
            Contactar por WhatsApp
          </a>
        </div>
      </section>
    </main>
  </div>
  <style>
    *,
    *::before,
    *::after {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      display: grid;
      place-content: center;
      min-height: 100vh;
      overflow: hidden;
      user-select: none;
      background: #d6d4d4;
    }
    .white-bkg {
      position: absolute;
      background: #ffffff;
      inset: 0;
      z-index: -10;
    }
    .shadow {
      height: 100vh;
    }
    main {
      background-size: contain;
      width: 60vh;
      height: 100vh;
      display: flex;
      position: relative;
    }
    section {
      width: 100%;
      border-radius: 22px;
      display: flex;
      gap: 24px;
      flex-direction: column;
      overflow: hidden;
      position: relative;
      padding: 16px 6px;
      margin: 10px 10px;
      background: #fff;
      box-shadow: 0 0 10px rgba(0,0,0,.1);
    }
    .card {
      width: 100%;
      max-width: 570px; /* Más pequeña */
      min-height: 220px; /* Más corta */
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      background: #727171;
      border-radius: 24px;
      padding: 0px 18px 18px 18px; /* Menos padding */
      box-shadow: 0 4px 24px rgba(0,0,0,0.10);
      color: #222;
      position: relative;
      gap: 12px; /* Menos espacio entre elementos */
      border: 1.5px solid #e0e0e0;
    }
    .me {
      width: 96px;
      height: 96px;
      background-color: #eaeaea;
      margin-top: 6px;
      margin-bottom: 10px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 2px 12px rgba(0,0,0,0.10);
      background-image: url("../../public/photos/usuario.webp");
      background-size: cover;
      background-position: center;
      border: 3px solid #fff;
    }
    .nombre {
      font-size: 1.7rem;
      font-weight: 700;
      margin-bottom: 0;
      letter-spacing: 0.5px;
      text-align: center;
      color: #222;
    }
    .rol {
      font-size: 1.08rem;
      color: #d6cfcf;
      margin-bottom: 8px;
      font-weight: 400;
      text-align: center;
    }
    .divider {
      width: 60%;
      height: 2px;
      background: #ececec;
      border-radius: 2px;
      margin: 10px 0 8px 0;
      opacity: 0.7;
    }
    .info-group {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 6px;
    }
    .info-label {
      font-weight: 600;
      color: #3b3b3b;
      font-size: 1.08rem;
      margin-bottom: 2px;
      letter-spacing: 0.2px;
    }
    .info-value {
      color: #222;
      font-size: 1.13rem;
      word-break: break-all;
      background: #f7f7f7;
      padding: 3px 10px 3px 10px;
      border-radius: 8px;
      font-weight: 400;
    }
    .buton {
      background-color: #444;
      padding: 12px 28px;
      border-radius: 12px;
      color: #fff;
      border: none;
      transition: background 0.2s, transform 0.2s, box-shadow 0.2s;
      cursor: pointer;
      font-size: 1.08rem;
      margin-top: 18px;
      text-decoration: none;
      font-weight: bold;
      box-shadow: 0 2px 8px rgba(0,0,0,0.10);
      display: flex;
      align-items: center;
      gap: 8px;
    }
    .buton:hover {
      background-color: #222;
      transform: translateY(-3px) scale(1.07);
      box-shadow: 0 4px 16px rgba(0,0,0,0.18);
    }
    @media (max-width: 700px) {
      .card {
        max-width: 98vw;
        padding: 18px 2vw 18px 2vw;
      }
      main {
        width: 100vw;
        min-width: unset;
      }
    }
  </style>
</Layout>